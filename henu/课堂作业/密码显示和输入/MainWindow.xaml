<Window x:Class="密码显示和输入.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:密码显示和输入"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="InputLabel" Content="输入密码" HorizontalAlignment="Left" Margin="75,109,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="OutputLabel" Content="显示密码" HorizontalAlignment="Left" Margin="75,217,0,0" VerticalAlignment="Top" FontSize="24"/>
        <PasswordBox x:Name="InputPasswordBox" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Width="298" Height="40" PasswordChanged="Input_PasswordChanged"/>
        <TextBox x:Name="OutPutPasswordBox" HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="298" RenderTransformOrigin="0.494,0.569" Height="40"/>

    </Grid>
</Window>
