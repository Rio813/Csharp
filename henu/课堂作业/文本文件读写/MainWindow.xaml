<Window x:Class="文本文件读写.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:文本文件读写"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="文件路径：" HorizontalAlignment="Left" Margin="43,38,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox Name="txtfilepath" HorizontalAlignment="Left" Height="36" Margin="146,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="421" FontSize="16"/>
        <Button x:Name="selectBtn" Content="浏览" HorizontalAlignment="Left" Margin="586,37,0,0" VerticalAlignment="Top" Width="85" FontSize="16" Height="30" Click="SelectButton_Click"/>
        <TextBox Name="txtContent" HorizontalAlignment="Left" Height="244" Margin="43,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="693" FontSize="16"/>
        <Button x:Name="readBtn" Content="读取文件" HorizontalAlignment="Left" Margin="694,38,0,0" VerticalAlignment="Top" Width="78" FontSize="16" Click="ReadButton_Click" Height="29"/>
        <Button x:Name="WriteBtn" Content="保存文件" HorizontalAlignment="Left" Margin="325,357,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="WriteButton_Click"/>

    </Grid>
</Window>
